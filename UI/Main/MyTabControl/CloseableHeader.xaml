<UserControl x:Class="UI.Main.CloseableHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Main"
             mc:Ignorable="d" 
             d:DesignHeight="23" d:DesignWidth="81">
    
    <StackPanel Orientation="Horizontal">
        <Label HorizontalAlignment="Left" VerticalAlignment="Center"
               FontFamily="Courier" FontSize="12" Content="TabItem"
               x:Name="TabTitleLabel" />
        
        <Button Content="X" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 
                HorizontalAlignment="Right" VerticalAlignment="Center" FontFamily="Courier"
                FontSize="14" ToolTip="Close" 
                x:Name="CloseButton" />
    </StackPanel>
</UserControl>
